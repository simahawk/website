<?xml version="1.0" encoding="utf-8"?>

<odoo>

  <template id="page_default" name="Page default">
    <t t-call="website.layout">
      <t t-call="website_cms.mgmt_actions" />
      <t t-call="website_cms.page_default_content" />
    </t>
  </template>


  <template id="page_default_content" name="Page default content">

    <t t-if="editable">
      <div t-field="main_object.description">
        No description for this page yet. You see this because you can edit this page.
      </div>
    </t>
    <t t-if="not editable and main_object.description">
      <div t-esc="main_object.description">Description of the page</div>
    </t>

    <div id="object_body"
         t-field="main_object.body"
         class="oe_structure"
         />

  </template>

  <!-- enable view for cms -->
  <record id="website_cms.page_default" model="ir.ui.view">
    <field name="cms_view" eval="1" />
  </record>

</odoo>

