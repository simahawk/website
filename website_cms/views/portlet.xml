<?xml version="1.0" encoding="utf-8"?>

<openerp>
  <data>

<record id="cms_portlet_assignment_form" model="ir.ui.view">
  <field name="name">CMS Portlet Assignment form</field>
  <field name="model">cms.portlet.assignment</field>
  <field name="arch" type="xml">
    <form string="Portlet assignment">

      <field name="res_id" invisible="1" />
      <field name="portlet_type_id"
             options="{'no_open': True, 'no_create': True}" />

    </form>
  </field>
</record>


<record id="cms_portlet_assignment_tree" model="ir.ui.view">
  <field name="name">CMS Portlet Assignment tree</field>
  <field name="model">cms.portlet.assignment</field>
  <field name="arch" type="xml">
    <tree string="Assignments">
      <field name="sequence" widget="handle" />
      <field name="portlet_type_id" string="Portlet" />
    </tree>
  </field>
</record>


<record id="cms_portlet_static_form" model="ir.ui.view">
  <field name="name">CMS Portlet static form</field>
  <field name="model">cms.portlet.static</field>
  <field name="arch" type="xml">
    <form string="Portlet">

      <group name="main_1" col="2">
        <field name="name" colspan="2" />
        <field name="view_id" colspan="2"
               options="{'no_open': True, 'no_create': True}" />
      </group>

    </form>
  </field>
</record>

  </data>
</openerp>


